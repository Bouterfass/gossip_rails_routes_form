
<div class="container-fluid pt-5 imagesimp">
        <div class="row">
            <h1 class="display-3 mx-auto title">The Gossip Project</h1>
        </div>
        <div class="row">
            <p class="lead mx-auto">Partage tes potins les plus croustillants.</p>
        </div>
        <div class="row">
                <%= link_to new_gossip_path, :class=>"btn btn-outline-primary btn-xl mx-auto mt-5 mb-5" do %>
                    <strong>Créer un gossip</strong>
                <% end %>        
   
        </div>
</div>




    <div class="row background-row pt-5">
        <div class="container">
            <% @array.each do |ag| %>
                <div class="row pb-5">
                    <% ag.each do |g| %>
                        <div class="col">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title d-flex justify-content-between">
                                        <h5><%= g.title %> <h6><small><em><%= g.created_at.to_s.split(' ')[0] %></em></small></h6></h5>
                                        <% if current_user == g.user %>
                                            <%= link_to gossip_path(g.id), method: "delete", :data => {:confirm => 'Are you sure?'} do %>   
                                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash red" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                                </svg>
                                            <% end %>
                                         <% end  %>
                                    </div>
                                    <p class="card-text pb-2">
                                        écrit par  
                                        <%= link_to user_path(g.user.id) do %>
                                            <strong><%= g.user.first_name %> <%= g.user.last_name %> </strong>   
                                        <% end %>
                                    </p>
                                    
                        
                                <div class="ml-auto d-flex justify-content-center align-items-center">
                                    <%= link_to gossip_path(g.id), :class=>"btn btn-primary" do %>
                                        <strong>Accéder au gossip</strong>
                                    <% end %>

                                
                              
                                    <p class=" ml-auto"><%= g.likes.count %></p> 
                                    <% if g.likes.count == 1 %>
                                        <div class="ml-2">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                                            </svg>
                                        </div>
                                    <% else %>
                                        <div class="ml-2">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                                            </svg>
                                        </div>
                                    <% end %>
                                </div>

                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>

